<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/num2"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Start now"
            android:maxWidth="90dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint=";)"
            android:paddingLeft="3dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/n1"
            android:layout_centerHorizontal="true"
            android:maxWidth="90dp"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/equalv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/n1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp"
            android:paddingLeft="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/equal"
        android:text="0" />

    <Button
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:text="1" />

    <Button
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignTop="@+id/num1"
        android:layout_toEndOf="@+id/num1"
        android:text="2" />

    <Button
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignTop="@+id/num2"
        android:layout_toEndOf="@+id/num2"
        android:text="3" />

    <Button
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/num2"
        android:text="4" />

    <Button
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignStart="@+id/num2"
        android:layout_below="@+id/num2"
        android:text="5" />

    <Button
        android:id="@+id/num6"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_below="@+id/num2"
        android:layout_toEndOf="@+id/num2"
        android:text="6" />

    <Button
        android:id="@+id/num7"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/num6"
        android:text="7" />

    <Button
        android:id="@+id/num8"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignStart="@+id/equal"
        android:layout_below="@+id/num6"
        android:text="8" />

    <Button
        android:id="@+id/num9"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_below="@+id/num6"
        android:layout_toEndOf="@+id/num2"
        android:text="9" />

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/num2"
        android:text="/" />

    <Button
        android:id="@+id/by"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/num2"
        android:text="*" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/num9"
        android:text="+" />

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/equal"
        android:text="-" />

    <Button
        android:id="@+id/equal"
        android:layout_width="175dp"
        android:layout_height="66dp"
        android:layout_alignStart="@+id/num2"
        android:layout_below="@+id/num9"
        android:text="=" />

    <Button
        android:id="@+id/clear"
        android:layout_width="263dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Clear" />

    <Button
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="delete" />

</RelativeLayout>